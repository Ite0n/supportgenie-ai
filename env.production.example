# Production Environment Configuration
# Copy this file to .env.local and update with your actual production values

# Backend API URL (Production)
NEXT_PUBLIC_API_URL=https://your-backend-domain.com

# Analytics and Monitoring (Required for production)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Contact and Support
NEXT_PUBLIC_CONTACT_EMAIL=hello@supportgenie.ai
NEXT_PUBLIC_SUPPORT_EMAIL=support@supportgenie.ai

# Social Media and Branding
NEXT_PUBLIC_TWITTER_HANDLE=@supportgenie_ai
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/supportgenie-ai
NEXT_PUBLIC_WEBSITE_URL=https://supportgenie.ai

# Feature Flags
NEXT_PUBLIC_ENABLE_WHATSAPP=true
NEXT_PUBLIC_ENABLE_TELEGRAM=true
NEXT_PUBLIC_ENABLE_WEBSITE_CHAT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Business Configuration
NEXT_PUBLIC_COMPANY_NAME=SupportGenie AI
NEXT_PUBLIC_COMPANY_DESCRIPTION=24/7 AI-Powered Customer Support Platform
NEXT_PUBLIC_PRICING_PLANS_ENABLED=true

# Security and Performance
NEXT_PUBLIC_ENABLE_HTTPS=true
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_CACHING=true

# Third-party Integrations
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_key
NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_website_id
NEXT_PUBLIC_INTERCOM_APP_ID=your_intercom_app_id
